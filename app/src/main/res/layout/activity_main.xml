<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Dynamic and Stylish Photo Frame"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ivMotivation0"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_below="@+id/tvHeading"
        android:layout_marginTop="20dp"
        android:src="@drawable/pic0" />

    <ImageView
        android:id="@+id/ivMotivation1"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_below="@+id/tvHeading"
        android:layout_marginTop="20dp"
        android:alpha="0"
        android:src="@drawable/pic1" />

    <ImageView
        android:id="@+id/ivMotivation2"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_below="@+id/tvHeading"
        android:layout_marginTop="20dp"
        android:alpha="0"
        android:src="@drawable/pic2" />

    <ImageView
        android:id="@+id/ivMotivation3"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_below="@+id/tvHeading"
        android:layout_marginTop="20dp"
        android:alpha="0"
        android:src="@drawable/pic3" />

    <ImageView
        android:id="@+id/ivMotivation4"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_below="@+id/tvHeading"
        android:layout_marginTop="20dp"
        android:alpha="0"
        android:src="@drawable/pic4" />

    <ImageButton
        android:id="@+id/btnNext"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivMotivation1"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="70dp"
        android:src="@drawable/baseline_arrow_forward_24" />

    <ImageButton
        android:id="@+id/btnPrev"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivMotivation1"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/baseline_arrow_back_24" />


</RelativeLayout>